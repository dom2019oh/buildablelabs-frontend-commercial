# =============================================================================
# BUILDABLE BACKEND ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3000
VERSION=1.0.0
CORS_ORIGINS=http://localhost:5173,https://your-frontend.lovable.app

# =============================================================================
# SUPABASE (Required)
# =============================================================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# =============================================================================
# AI PROVIDERS (At least one required)
# =============================================================================
# OpenAI (recommended)
OPENAI_API_KEY=sk-your-openai-key

# Anthropic (optional)
ANTHROPIC_API_KEY=your-anthropic-key

# Google AI (optional)
GOOGLE_AI_KEY=your-google-ai-key

# Default AI configuration
DEFAULT_AI_PROVIDER=openai
DEFAULT_ARCHITECT_MODEL=gpt-4o
DEFAULT_CODER_MODEL=gpt-4o

# =============================================================================
# PREVIEW SERVER
# =============================================================================
PREVIEW_BASE_PORT=3100
PREVIEW_HOST=localhost
PREVIEW_MAX_SERVERS=10

# =============================================================================
# QUEUE (Optional - for scalability)
# =============================================================================
# Redis URL for job queue (optional - direct execution if not set)
REDIS_URL=redis://localhost:6379

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=debug
