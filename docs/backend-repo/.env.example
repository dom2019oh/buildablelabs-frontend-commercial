# =============================================================================
# BUILDABLE BACKEND - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# Server
NODE_ENV=development
PORT=3000
VERSION=1.0.0

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:8080,https://buildablelabs.dev,https://www.buildablelabs.dev

# =============================================================================
# Supabase (REQUIRED)
# =============================================================================
# Get these from your Supabase project settings
# Your project: wpwbemvrsceegkdiopwb
SUPABASE_URL=https://wpwbemvrsceegkdiopwb.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here

# =============================================================================
# AI Providers (at least one required)
# =============================================================================
# Grok (xAI) - Primary for code generation
GROK_API_KEY=your_grok_api_key

# OpenAI - Advanced reasoning & fallbacks  
OPENAI_API_KEY=your_openai_api_key

# Gemini (Google) - Planning & multimodal
GEMINI_API_KEY=your_gemini_api_key

# =============================================================================
# AI Model Defaults (optional - these are the defaults)
# =============================================================================
DEFAULT_AI_PROVIDER=grok
DEFAULT_ARCHITECT_MODEL=gemini-2.5-pro
DEFAULT_CODER_MODEL=grok-code-fast-1
DEFAULT_VALIDATOR_MODEL=grok-4.1-fast

# =============================================================================
# Redis (Optional - for BullMQ job queue)
# =============================================================================
# If not set, jobs run synchronously
REDIS_URL=redis://localhost:6379

# =============================================================================
# Preview Server (Optional)
# =============================================================================
PREVIEW_BASE_PORT=3100
PREVIEW_HOST=localhost
PREVIEW_MAX_SERVERS=10

# =============================================================================
# Credits System
# =============================================================================
CREDITS_COST_MULTIPLIER=0.001
DAILY_FREE_CREDITS=5
DEFAULT_USER_CREDITS=10

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info
